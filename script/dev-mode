#!/bin/bash

set -euo pipefail

docker_env="$(docker-machine env $DOCKER_MACHINE_NAME | grep -vE '^#' | tr "\n" ' ')"

tmux split-window -h bash -c "${docker_env} && forego start"

# tmux split-window -h bash -c "${docker_env}; ./script/webpack-watch"
# tmux split-window -t '.1' -p 65 bash -c "${docker_env}; sleep 2; ./script/hugo-watch"
# tmux split-window -t '.2' -l 2 -c $PWD/public 'http-local-server'

sleep 4 # wait for hugo to complete
./script/dev-open
